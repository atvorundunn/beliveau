import allel
import numpy as np

#parse data
dat = allel.read_vcf('/Users/tvorua/Downloads/hg38.hybrid.vcf')
position = dat['variants/POS']
position = position[:20000]

reference = dat['variants/REF']
reference = reference[:20000]

alternate = dat['variants/ALT']
alternate = alternate[:20000]

posrefalt = np.array([position, reference, alternate[0]])

seen = [0]
duplicates = [0]

